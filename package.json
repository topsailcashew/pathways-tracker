{
  "name": "shepherd-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Church integration platform for tracking newcomers and new believers with AI-powered insights",
  "author": "Your Church Tech Team",
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=shepherd",
    "dev:web": "npm run dev --workspace=shepherd",
    "dev:api": "npm run dev --workspace=shepherd-backend",
    "dev:all": "(npm run dev --workspace=shepherd-backend &) && npm run dev --workspace=shepherd",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=shepherd",
    "build:api": "npm run build --workspace=shepherd-backend",
    "test": "npm run test --workspaces --if-present",
    "test:web": "npm run test --workspace=shepherd --if-present",
    "test:api": "npm run test --workspace=shepherd-backend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
