# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Firebase/Firestore Configuration
# Get these from Firebase Console: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your-firebase-project-id

# For production, download service account key from Firebase Console
# Go to: Project Settings > Service Accounts > Generate New Private Key
# Then stringify the JSON and set it here:
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# For development, you can:
# 1. Use Firebase Emulator (recommended for local dev)
# 2. Use Application Default Credentials (gcloud auth application-default login)
# 3. Or provide FIREBASE_SERVICE_ACCOUNT_KEY above

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (Nodemailer with Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="Pathway Tracker <noreply@yourchurch.org>"

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10

# Optional: SendGrid (alternative to Gmail)
# SENDGRID_API_KEY=your_sendgrid_api_key
