# Security Headers for Production Deployment
# This file is used by Netlify and similar platforms
# For other platforms, configure these headers in your server/CDN settings

/*
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Prevent clickjacking
  X-Frame-Options: DENY

  # Enable XSS protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # Referrer policy - don't leak sensitive URLs
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions policy - restrict browser features
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()

  # Content Security Policy (IMPORTANT!)
  # This is a strict CSP - you may need to adjust based on your needs
  # Currently allows inline styles (Tailwind) and Google Gemini API
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://generativelanguage.googleapis.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

  # HSTS - Force HTTPS (enable in production only)
  # Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cache control for index.html
  Cache-Control: no-cache, no-store, must-revalidate

  # Feature policy
  Feature-Policy: camera 'none'; microphone 'none'; geolocation 'none'

# Static assets - aggressive caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images
/images/*
  Cache-Control: public, max-age=31536000, immutable

*.png
  Cache-Control: public, max-age=31536000, immutable

*.jpg
  Cache-Control: public, max-age=31536000, immutable

*.svg
  Cache-Control: public, max-age=31536000, immutable
